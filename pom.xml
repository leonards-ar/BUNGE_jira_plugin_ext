		<!-- JIRA version -->
		<atlassian.product.version>3.13</atlassian.product.version>
		<!-- JIRA functional test library version -->
		<atlassian.product.test-lib.version>
			3.13
		</atlassian.product.test-lib.version>
		<!-- JIRA data version -->
		<atlassian.product.data.version>
			3.13
		</atlassian.product.data.version>
	</properties>

